<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRecharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff6600"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/ecocashUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Enter Ecocash username"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:layout_margin="10sp"
        android:id="@+id/approvalCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter approval code"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:inputType="text"
        android:textStyle="bold"/>


    <Button
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_margin="10sp"
        android:padding="10sp"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#544AE0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_light_reguler"
        android:onClick="recharge"
        android:text="RECHARGE" />

</LinearLayout>

